import tkinter as tk
from tkinter import messagebox

# Tworzymy główne okno aplikacji
root = tk.Tk()

# Funkcja zamykająca aplikację po kliknięciu "Anuluj"
def anuluj():
    root.destroy()

# Funkcja obsługująca logowanie po kliknięciu "Zaloguj"
def zaloguj():
    haslo = haslo_entry.get()  # Pobranie hasła z pola tekstowego

    if haslo == "1234":  # Sprawdzenie poprawności hasła
        messagebox.showinfo("Aplikacja testowa", "Pomyślnie zalogowano!")  # Komunikat o sukcesie
        root.destroy()  # Zamknięcie okna
    else:
        messagebox.showinfo("Aplikacja testowa", "Błędne hasło")  # Komunikat o błędzie

# Ustawienia okna głównego
root.title("Aplikacja testowa")      # Tytuł okna
root.geometry("600x500")             # Początkowy rozmiar
root.minsize(400, 300)               # Minimalny rozmiar
root.maxsize(900, 600)               # Maksymalny rozmiar

# Konfiguracja układu siatki (grid)
root.columnconfigure(1, weight=1)
root.columnconfigure(2, weight=1)

root.rowconfigure(0, weight=1)
root.rowconfigure(3, weight=1)

# Etykieta "Login"
label_login = tk.Label(root, text="Login", font="bold")
label_login.grid(column=1, row=1, sticky="ew", padx=60, pady=40)

# Pole do wpisania loginu
login_entry = tk.Entry(root)
login_entry.grid(column=2, row=1, sticky="ew", padx=60, pady=10)

# Etykieta "Hasło"
label_haslo = tk.Label(root, text="Hasło", font="bold")
label_haslo.grid(column=1, row=2, sticky="ew", padx=60, pady=40)

# Pole do wpisania hasła (z ukryciem znaków)
haslo_entry = tk.Entry(root, show="*")
haslo_entry.grid(column=2, row=2, sticky="ew", padx=60, pady=10)

# Przycisk "Anuluj"
button_anuluj = tk.Button(root, text="Anuluj", command=anuluj, background="black", fg="white")
button_anuluj.grid(column=1, row=3, sticky="ew", padx=10, pady=10)

# Przycisk "Zaloguj"
button_zaloguj = tk.Button(root, text="Zaloguj", command=zaloguj, background="black", fg="white")
button_zaloguj.grid(column=2, row=3, sticky="ew", padx=10, pady=10)

# Uruchomienie głównej pętli aplikacji
root.mainloop()
